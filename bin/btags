#!/bin/sh -e
# $Header: /usersnfs/deantoni/common/bin/RCS/btags,v 1.1 2016/08/02 09:50:22 deantoni Exp $

getScriptPath () {
  echo ${0%/*}/
}
source $(getScriptPath)/common.sh
rm -f tags;
for d in $(cat rebtags|grep -v "^#");
do
  ctags -R -a --exclude=*.py --exclude=.git --exclude=.svn --exclude=opkgbuild --exclude=TARGETS --exclude=*.js --exclude=3rdparty --exclude=third-party --exclude=*.html --c++-kinds=+p --fields=+iaS --extra=+q $d;
done;

exit 0;
