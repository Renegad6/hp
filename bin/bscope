#!/bin/sh -e
# $Header: /usersnfs/deantoni/common/bin/RCS/bscope,v 1.1 2016/08/02 09:50:22 deantoni Exp $

getScriptname () {
  echo ${0%/*}/
}
source $(getScriptname)/common.sh
rm -f cscope.*;
for d in $(cat rebtags|grep -v "^#");
do
  find $d -type d \( -name ".svn" -o -name "opkgbuild" -o -name ".git" -o -name "TARGETS" \) -prune -o -type f -name "*.c" >> cscope.files;
  find $d -type d \( -name ".svn" -o -name "opkgbuild" -o -name ".git" -o -name "TARGETS" \) -prune -o -type f -name "*.cpp" >> cscope.files;
done;
cscope -b;

exit 0;
